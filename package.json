{
  "name": "terem",
  "version": "1.0.0",
  "private": true,
  "description": "Terem Company test project",
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/runtime-corejs3": "^7.12.5",
    "@htmlacademy/editorconfig-cli": "1.x",
    "browser-sync": "^2.26.x",
    "core-js": "^3.8.0",
    "del": "^5.1.x",
    "eslint": "^7.9.x",
    "eslint-config-htmlacademy": "^0.6.x",
    "eslint-config-prettier": "^6.11.x",
    "eslint-plugin-prettier": "^3.1.x",
    "gulp": "^4.0.x",
    "gulp-autoprefixer": "^7.0.x",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.x",
    "gulp-file-include": "^2.2.x",
    "gulp-imagemin": "^7.1.x",
    "gulp-plumber": "^1.2.x",
    "gulp-postcss": "^8.0.x",
    "gulp-rename": "^2.0.x",
    "gulp-sass": "^4.1.x",
    "gulp-sourcemaps": "^2.6.x",
    "gulp-svgmin": "^3.0.x",
    "gulp-svgstore": "^7.0.x",
    "gulp-terser": "^2.0.1",
    "htmlhint": "^0.14.x",
    "imagemin-pngquant": "^9.0.1",
    "imagemin-webp": "^6.0.x",
    "node-sass": "^5.0.0",
    "prettier": "^2.1.x",
    "regenerator-runtime": "^0.13.7",
    "stylelint": "^13.7.x",
    "stylelint-config-htmlacademy": "^0.1.x",
    "stylelint-config-prettier": "^8.0.x",
    "stylelint-config-recommended-scss": "^4.2.x",
    "stylelint-scss": "^3.18.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint && eslint source/js/*.js",
    "build": "gulp buildProject",
    "start": "gulp startServer",
    "checkJs": "eslint source/js/*.js",
    "fixJs": "eslint --fix source/js/*.js",
    "checkHtml": "htmlhint source/**/*.html",
    "checkCss": "stylelint source/sass/**/*.scss --syntax scss",
    "delNpmModules": "rimraf node_modules"
  },
  "browserslist": [
    "defaults",
    "IE 11"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "dependencies": {}
}
